<!DOCTYPE html>
<html>
  <head>
    <title>RorSocialScaffold</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="nav">
      <%= link_to 'Stay in touch', root_path %>
      <div class="menu">
        <div class="menu-item">
          <%= menu_link_to 'Timeline', posts_path %>
        </div>
        <div class="menu-item">
          <%= menu_link_to 'All users', users_path %>
        </div>
      </div>
      <% if current_user %>
        <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to 'Sign in', user_session_path %>
      <% end %>
    </nav>
    <% if notice.present? %>
      <div class="notice">
        <p> <%= notice %> </p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="alert">
        <p> <%= alert %> </p>
      </div>
    <% end %>

    <div class="Request"> 
      <% if current_user %>
        <% pending_friend_requests(current_user).each do |request| %>
          <p><%= request.user.name %> has sent you a friend request!</p></br>
          <p>What is your response?</p>
          <%= button_to "Accept", "/friendships/#{request.id}", method: :patch %>
          <%= button_to "Reject", "/friendships/#{request.id}", method: :delete %>
        <% end %>
      <% end %>
    </div>
    <main class="main">
      <%= yield %>
    </main>
  </body>
</html>
