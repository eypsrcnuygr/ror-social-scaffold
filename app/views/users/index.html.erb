<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
    <li>
      Name: <%= user.name %>
      <span class="profile-link">
        <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
        <% unless user.id == current_user.id || current_user.friends.include?(user) %>
        <%= button_to 'Add as a Friend', friendships_path, params: {friend_id: user.id} %>
        <% end %>
      </span>
    </li>
    <% end %>
  </ul>
</section>